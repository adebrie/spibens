<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="debrie.android.fr.spibens.ProfileActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_blue_dark"
            android:elevation="4dp"
            />

        <ImageView
            app:layout_marginTopPercent="10%"
            android:src="@drawable/header"
            android:id="@+id/header"
            android:layout_width="match_parent"
            app:layout_heightPercent="30%"/>

        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_marginTopPercent="8%"
            app:layout_marginLeftPercent="33.3%"
            android:id="@+id/profilepic"
            app:layout_widthPercent="33.3%"
            app:layout_heightPercent="31%"
            app:civ_border_width="4dp"
            app:civ_border_color="#FFFF"
            android:src="@drawable/ic_profile" />


        <LinearLayout
            android:padding="20dp"
            app:layout_marginTopPercent="33%"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="35dp"
                android:id="@+id/name_text"
                android:text="Name"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:text="Personal Info"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Lab"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginLeft="44dp"
                    android:hint="Lab"
                    android:id="@+id/lab_text" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Room"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/room_text"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="30dp"
                    android:hint="Room"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="start"
                    android:text="Contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mail_text"
                    android:gravity="end"
                    android:layout_marginLeft="20dp"
                    android:hint="mail"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Speaks"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/lang_text"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginLeft="20dp"
                    android:hint="languages"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:text="Skills"/>
                <TextView
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/skills_text"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="20dp"
                    android:inputType="textMultiLine"
                    android:hint="Skills"/>
            </LinearLayout>


            <LinearLayout
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:text="Works on"/>
                <TextView
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/workson_text"
                    android:layout_marginLeft="20dp"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:hint="Projects"/>
            </LinearLayout>
        </LinearLayout>


    </android.support.percent.PercentRelativeLayout>
</ScrollView>