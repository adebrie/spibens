<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="debrie.android.fr.spibens.Profile">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/patrick"
            android:layout_gravity="center"
            android:id="@+id/patrickProfile" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Patrick Torbey"/>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Personal Info"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Lab"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginLeft="44dp"
                android:hint="Charnay"
                android:id="@+id/editText1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Room"/>

            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/editText2"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:hint="121"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="start"
                android:text="Contact" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:gravity="end"
                android:layout_marginLeft="20dp"
                android:hint="torbey@biologie.ens.fr"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Speaks"/>

            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/editText4"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginLeft="20dp"
                android:hint="English, French, Arabic"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Skills"/>
        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/editText5"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAlignment="textStart"
            android:layout_marginLeft="20dp"
            android:inputType="textMultiLine"
            android:hint="PCR, In situ hybridisation, Zebrafish transgenesis, CRISPR, Chicken electroporation, ATAC-seq, Molecular genetics techniques."/>

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Works on"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/editText6"
            android:layout_marginLeft="20dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:hint="Cooperation of multiple enhancers for Krox20 regulation in vertebrate hindbrain and their evolutionary divergence"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/updateProfile"
            android:text="UPDATE PROFILE"/>
    </LinearLayout>
</ScrollView>