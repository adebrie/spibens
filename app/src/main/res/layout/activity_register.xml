<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="debrie.android.fr.spibens.RegisterActivity">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/profileImage" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/name_text"
            android:text="Name"/>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Personal Info"/>



    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studies">
        <RadioButton
            android:id="@+id/radioPHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHD"/>
        <RadioButton
            android:id="@+id/radioPostDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post-Doc" />
        <RadioButton
            android:id="@+id/radioITA"
            android:text="ITA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Lab"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginLeft="44dp"
                android:hint="Lab"
                android:id="@+id/lab_text" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Room"/>

            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/room_text"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:hint="Room"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="start"
                android:text="Contact" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mail_text"
                android:gravity="end"
                android:layout_marginLeft="20dp"
                android:hint="mail"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Speaks"/>

            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/lang_text"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginLeft="20dp"
                android:hint="languages"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:text="Skills"/>
            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:id="@+id/skills_text"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAlignment="textStart"
                android:layout_marginLeft="20dp"
                android:inputType="textMultiLine"
                android:hint="SKills"/>
            <TextView
                android:id="@+id/skiill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/skill_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Works on"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/workson_text"
            android:layout_marginLeft="20dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:hint="Projects"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/updateSend"
            android:text="SEND UPDATE"/>
    </LinearLayout>
</ScrollView>