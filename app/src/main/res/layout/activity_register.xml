<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="debrie.android.fr.spibens.RegisterActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar_register"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/profileImage" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/name_text"
            android:text="Name"/>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Pick your diploma"/>



    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studies">
        <RadioButton
            android:id="@+id/radioPHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHD"/>
        <RadioButton
            android:id="@+id/radioPostDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post-Doc" />
        <RadioButton
            android:id="@+id/radioITA"
            android:text="ITA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="When did you start ?"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Section"/>

        <RadioGroup
            android:id="@+id/section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/radioDevelopmental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developmental \Biology" />

            <RadioButton
                android:id="@+id/radioEcology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ecology and Evolutionary Biology" />

            <RadioButton
                android:id="@+id/radioFunctional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Functional Geomics" />

            <RadioButton
                android:id="@+id/radioNeuroscience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neuroscience" />
        </RadioGroup>


    </LinearLayout>
</ScrollView>